<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.inu.mybatis.mappers.userMapper">
    <resultMap id="BaseResultMap" type="com.inu.mybatis.model.User" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="nick_name" property="nickName" jdbcType="VARCHAR" />
        <result column="open_id" property="openId" jdbcType="VARCHAR" />
        <result column="mood" property="mood" jdbcType="DOUBLE" />
        <result column="avatar" property="avatar" jdbcType="VARCHAR" />
    </resultMap>

    <select id="getUser" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select * from user where id = #{id}
    </select>
</mapper>